@model List<Employee>
<div class="container">
    <div class="row p-4 mt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista e punonjësve</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Krijo" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;Shto
            </a>
        </div>
    </div>
    <table class="table table-primary table-responsive">
        <thead>
            <tr>
                <th>Emri</th>
                <th>Mbiemri</th>
                <th>Veprime</th> <!-- Adjusted column name to "Actions" -->
            </tr>
        </thead>
        <tbody>
            @foreach (var entiteti in Model)
            {
                <tr>
                    <td>@entiteti.Emri</td>
                    <td>@entiteti.Mbiemri</td>
                    <td>
                        <div class="w-100 btn-group">
                            <a asp-controller="Employee" asp-action="Ndrysho" asp-route-id="@entiteti.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Ndrysho
                            </a>
                            <a asp-controller="Employee" asp-action="Fshi" asp-route-id="@entiteti.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Fshij
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
