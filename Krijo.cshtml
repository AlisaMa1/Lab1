@model Employee
<form method="post">
    <div class="row p-4 mt-4">
        <div class="border">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <h5>Shto punonjës</h5>
            </div>
            <div class="mb-2">
                <label asp-for="Emri"></label>
                <input asp-for="Emri" class="form-control" />
                <span asp-validation-for="Emri" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Mbiemri"></label>
                <input asp-for="Mbiemri" class="form-control" />
                <span asp-validation-for="Mbiemri" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-primary" value="Shto" />
            <a asp-controller="Employee" asp-action="Listo" class="btn btn-secondary">Kthehu</a>
        </div>
    </div>
</form>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
